    public void dialog() {
        int eingabe = -1;
        while (eingabe != 0) {
            System.out.println("(0) Programm beenden"
                    + "\n(1) neuen View erstellen"
                    + "\n(2) Controller zum Steuern nutzen");
            eingabe = Eingabe.leseInt();
            switch (eingabe) {
                case 1: {
                    neuerView();
                    break;
                }
                case 2: {
                    controllerNutzen();
                    break;
                }
            }
        }
    }

